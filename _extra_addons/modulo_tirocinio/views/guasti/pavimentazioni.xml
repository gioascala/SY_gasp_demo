<?xml version="1.0" encoding="UTF-8"?>
<odoo>

   <record model="ir.ui.view" id="g_pavimentazioni_tree">
        <field name="name">g_pavimentazioni.tree</field>
        <field name="model">g_pavimentazioni</field>
        <field name="arch" type="xml">
          <tree string="Guasti  pavimentazioni tree">
                <field name="elemento_tecnico"/>
                <field name="tipo_di_guasto"/>
                <field name="possibili_cause" />
                <field name="segnali_deboli"/>
            </tree>
        </field>
      </record>

    <record model="ir.ui.view" id="g_pavimentazioni_form">
            <field name="name">g_pavimentazioni.form</field>
            <field name="model">g_pavimentazioni</field>
            <field name="arch" type="xml">
                <form string="Guasti pavimentazioni Form">
                    <sheet>
                            <group>
                             <field name="elemento_tecnico"/>
                            </group>
                            <group>
                                <field name="tipo_di_guasto"/>
                            </group>
                            <group>
                                <field name="possibili_cause" />
                            </group>
                            <group>
                                <field name="segnali_deboli"/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>