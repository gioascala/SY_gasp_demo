<?xml version="1.0" encoding="UTF-8"?>
<odoo>

   <record model="ir.ui.view" id="strutture_orizzontali_tree">
        <field name="name">strutture_orizzontali.tree</field>
        <field name="model">strutture_orizzontali</field>
        <field name="arch" type="xml">
          <tree string="Strutture orizzontali tree">
            <field name="unità_tecnologica"/>
            <field name="elemento_tecnico"/>
            </tree>
        </field>
      </record>

    <record model="ir.ui.view" id="strutture_orizzontali_form">
            <field name="name">strutture_orizzontali.form</field>
            <field name="model">strutture_orizzontali</field>
            <field name="arch" type="xml">
                <form string="Strutture orizzontali Form">
                    <sheet>
                        <group>
                            <field name="unità_tecnologica"/>
                        </group>
                        <group>
                            <field name="elemento_tecnico"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>
