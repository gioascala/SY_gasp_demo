<?xml version="1.0" encoding="UTF-8"?>
<odoo>

   <record model="ir.ui.view" id="guardiola_tree">
        <field name="name">guardiola.tree</field>
        <field name="model">guardiola</field>
        <field name="arch" type="xml">
          <tree string="Guardiola tree">
            <field name="unità_tecnologica"/>
            <field name="elemento_tecnico"/>
            </tree>
        </field>
      </record>

    <record model="ir.ui.view" id="guardiola_form">
            <field name="name">guardiola.form</field>
            <field name="model">guardiola</field>
            <field name="arch" type="xml">
                <form string="Guardiola Form">
                    <sheet>
                        <group>
                            <field name="unità_tecnologica"/>
                        </group>
                        <group>
                            <field name="elemento_tecnico"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>
